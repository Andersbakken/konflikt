#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- \
		-G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_UI=OFF

override_dh_auto_install:
	dh_auto_install
	# Install binary
	install -D -m 755 debian/tmp/usr/bin/konflikt $(CURDIR)/debian/konflikt/usr/bin/konflikt
	# Install systemd user service (optional)
	install -D -m 644 $(CURDIR)/packaging/konflikt.service \
		$(CURDIR)/debian/konflikt/usr/lib/systemd/user/konflikt.service
