{
  "name": "konflikt",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app/index.js",
  "bin": {
    "konflikt": "./bin/konflikt"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:force": "node scripts/build.js --force",
    "build:ts": "tsc",
    "build:ui": "cd src/webpage && npm run build",
    "dev:ui": "cd src/webpage && npm run dev",
    "build:native:all": "npm run build:native:release && npm run build:native:debug",
    "build:native": "npm run build:native:all",
    "build:native:release": "cmake-js compile -l error --directory src/native --out dist/native/Release --config Release",
    "build:native:debug": "cmake-js compile -l error --directory src/native --out dist/native/Debug --config Debug",
    "rebuild:native": "npm run rebuild:native:release && npm run rebuild:native:debug",
    "rebuild:native:release": "cmake-js rebuild -l error --directory src/native --out dist/native/Release --config Release",
    "rebuild:native:debug": "cmake-js rebuild -l error --directory src/native --out dist/native/Debug --config Debug",
    "lint": "eslint src/app src/native --ext .ts --format unix",
    "lint:fix": "eslint src/app src/native --ext .ts --fix",
    "prettier-write": "prettier --write . --ignore-path .prettierignore",
    "prettier-check": "prettier --check . --ignore-path .prettierignore",
    "clang-format": "find src/native -name '*.cpp' -o -name '*.h' | xargs clang-format -i",
    "start": "node dist/app/index.js",
    "start:debug": "KONFLIKT_BUILD=debug node dist/app/index.js",
    "start:autoupdate": "./bin/konflikt-autoupdate --",
    "clean": "del-cli dist/*",
    "build:desktop": "node scripts/build.js --desktop-only",
    "build:macos": "node scripts/build.js --desktop-only",
    "build:macos:universal": "node scripts/build.js --desktop-only --universal",
    "build:macos:dist": "node scripts/build.js --desktop-only --universal --bundle-backend",
    "dmg": "cd src/desktop/macos && chmod +x create-dmg.sh && ./create-dmg.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "keywords": [],
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.6.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^4.3.3",
    "cmake-js": "^7.3.1",
    "del-cli": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "node-addon-api": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "@fastify/static": "^8.3.0",
    "bonjour-service": "^1.3.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "fastify": "^5.6.1",
    "minimist": "^1.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "ws": "^8.18.3",
    "yargs": "^18.0.0",
    "zod": "^4.1.11"
  }
}
