{
  "name": "konflikt",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "bin": {
    "konflikt": "./bin/konflikt"
  },
  "scripts": {
    "build": "npm run lint && run-p build:native:all build:ts",
    "build:ts": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "build:native:all": "npm run build:native:release && npm run build:native:debug",
    "build:native": "npm run build:native:all",
    "build:native:release": "cmake-js compile --directory src/native --out dist/build/Release --config Release",
    "build:native:debug": "cmake-js compile --directory src/native --out dist/build/Debug --config Debug",
    "rebuild:native": "npm run rebuild:native:release && npm run rebuild:native:debug",
    "rebuild:native:release": "cmake-js rebuild --directory src/native --out dist/build/Release --config Release",
    "rebuild:native:debug": "cmake-js rebuild --directory src/native --out dist/build/Debug --config Debug",
    "lint": "eslint src --ext .ts --format unix",
    "lint:fix": "eslint src --ext .ts --fix",
    "prettier-write": "prettier --write . --ignore-path .prettierignore",
    "prettier-check": "prettier --check . --ignore-path .prettierignore",
    "start": "node dist/index.js",
    "start:debug": "KONFLIKT_BUILD=debug node dist/index.js",
    "clean": "del-cli dist/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "keywords": [],
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.6.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cmake-js": "^7.3.1",
    "del-cli": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "node-addon-api": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "fastify": "^5.6.1",
    "minimist": "^1.2.8",
    "ws": "^8.18.3",
    "zod": "^4.1.11"
  }
}
